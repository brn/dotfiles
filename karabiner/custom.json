{
  "title": "Custom",
  "rules": [
    {
      "description": "PageDown,PageUp",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "l",
            "modifiers": {
              "mandatory": ["left_command"]
            }
          },
          "to": [
            {
              "key_code": "page_up"
            }
          ]
        },
        {
          "type": "basic",
          "from": {
            "key_code": "period",
            "modifiers": {
              "mandatory": ["left_command"]
            }
          },
          "to": [
            {
              "key_code": "page_down"
            }
          ]
        }
      ]
    },
    {
      "description": "CapsLock",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "tab",
            "modifiers": {
              "mandatory": ["left_shift"]
            }
          },
          "to": [
            {
              "sticky_modifier": {
                "left_shift": "on"
              }
            }
          ]
        },
        {
          "type": "basic",
          "from": {
            "key_code": "tab",
            "modifiers": {
              "mandatory": ["right_shift"]
            }
          },
          "to": [
            {
              "sticky_modifier": {
                "left_shift": "off"
              }
            }
          ]
        }
      ]
    }
  ]
}
